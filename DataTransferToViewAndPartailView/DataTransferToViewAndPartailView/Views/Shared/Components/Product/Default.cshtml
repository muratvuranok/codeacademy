@model IEnumerable<Product>

<h1 class="display-1">Ürün Listesi</h1>

<table class="table table-hover">
    <caption>Ürünler</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => product.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(model => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(model => product.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(model => product.UnitPrice)
                </td>
            </tr>
        }
    </tbody>
</table>