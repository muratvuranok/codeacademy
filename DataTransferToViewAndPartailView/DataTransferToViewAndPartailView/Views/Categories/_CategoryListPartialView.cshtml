                <a asp-action="Edit" asp-route-id="@item.CategoryId" color="warning" icon="pen"></a>
                <a asp-action="Edit" asp-route-id="@item.CategoryId" color="danger" icon="trash"></a>
                </td>*@
                    <td item-id="@item.CategoryId">
                
                    </td>
                </tr>
            }
